doctype html5

html

	head
	
		link(rel='stylesheet', href='/css/font-awesome.css')
		link(rel='stylesheet', href='/css/main.css')
		link(rel='stylesheet', href='/css/jquery-ui/jquery-ui-1.9.2.custom.css')
		
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js")
		script(src="/js/main.js")
	
	body
	
		#searchWrap
			form(action="", method="GET")
				input.keywords(placeholder="job title, skills or company", type="text", name="keywords", value="#{search.keywords}")
				input.location(placeholder="town or postcode", type="text", name="location", value="#{search.location}")
				button.button Go
				
		#filtersWrap
			.salaryWrap
				.salaryLabel Any salary
				#salarySlider

		#resultsWrap
			#resultsInner

				a#jobsPrev(href="#{prevHref}") previous 
		
				ul#jobs
					- each job in jobs
						li.job
							a.link(href='#{job.url}')
								h2.jobTitle(data-title="#{job.title}")= job.shortTitle
								ul.details
									li= job.salary
									li= job.location
								.icons
									.applicationsWrap
										i.icon-user
										span.applications= job.applications
									.dateWrap
										i.icon-calendar
										span.date= job.date
			
				a#jobsNext.job.button(href="#{nextHref}") more jobs

		#jobViewWrap
			#jobViewInner
				#jobViewScroll
					h1.jobTitle
					#jobDescription
				#jobViewApplication
					a.button.applyBtn(href="#") Apply now
		
		#templates
		
			#jobTemplate
				li.job
					a.link
						h2.jobTitle
						ul.details
							li.salary
							li.location
						.icons
							.applicationsWrap
								i.icon-user
								span.applications
							.dateWrap
								i.icon-calendar
								span.date
