	body
	
		#options.searchLayoutTop.jobsLayoutCards
	
			#controlPanelWrap
				#controlPanelBtn
					a(href="#")
						i.icon-cog
					
				#controlPanel
					
					section
						h3 Search layout
						label
							input.option(type="radio", name="searchLayout", value="Left")
							span Left
						label
							input.option(type="radio", name="searchLayout", value="Top")
							span Top
			
					section
						h3 Job layout
						label
							input.option(type="radio", name="jobsLayout", value="Cards")
							span Cards
						label
							input.option(type="radio", name="jobsLayout", value="Rows")
							span Rows
							
					section
						h3 Excerpts
						label
							input.option(type="radio", name="excerpts", value="On")
							span On
						label
							input.option(type="radio", name="excerpts", value="Off")
							span Off
					
			#searchWrap
				form(action="", method="GET")
					input.keywords(placeholder="Search for job title, skills or companies", type="text", name="keywords", value="#{search.keywords}")
					input.location(placeholder="town or postcode", type="text", name="location", value="#{search.location}")
					//button.button Go
				
			#filtersWrap
				section.salaryWrap
					.salaryLabel Any salary
					ul#salaryGraph
						li.col1
						li.col2
						li.col3
						li.col4
						li.col5
					#salarySlider
					
				section.typesHoursWrap
				
					h2.toggleWrap
						a.toggle#toggleTypesHours(href="#")
							span.label Any job type
							i.icon-sort-down
						
					.collapse#collapseTypesHours
						ul.types
							li
								a(href="#", data-name="perm") Permanent
							li
								a(href="#", data-name="temp") Temp
							li
								a(href="#", data-name="contract") Contract
							
						ul.hours
							li
								a(href="#", data-name="fulltime") Full-time
							li
								a(href="#", data-name="parttime") Part-time
					
				section.suggestionsWrap
					h4 Suggestions
					ul.suggestions

			#resultsWrap	
				#resultsInner
				
					header
						h1#resultsTitle
						
						.sort
							a(href="#", data-value="KeywordRelevance").button.relevancy.selected
								span Most relevant
							a(href="#", data-value="DisplayDate").button.date
								span Most recent

					// a#jobsPrev(href="#{prevHref}") previous 
					
