doctype html5

html

	head
		link(rel='stylesheet', href='/css/main.css')
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
		script(src="/js/main.js")
	
	body
	
		#searchWrap
			form(action="", method="GET")
				input.keywords(type="text", name="keywords", value="#{search.keywords}")
				input.location(type="text", name="location", value="#{search.location}")
				button.button Go

		#resultsWrap
			#resultsInner

				a#jobsPrev(href="#{prevHref}") previous 
		
				ul#jobs
					- each job in jobs
						li.job
							h2.jobTitle= job.title
		
				a#jobsNext.button(href="#{nextHref}") more jobs
		
		#templates
		
			#jobTemplate
				li.job
					h2.jobTitle
