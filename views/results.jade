			#scrollToTop
				a(href="#")
					i.icon-sort-up

			#jobViewWrap
				#jobViewInner
					#jobViewScroll
						h1.jobTitle
						#jobDescription
					#jobViewApplication
						a.button.applyBtn(href="#") Apply now
		
			#templates
			
				#suggestionTemplate
				
					li.suggestion
						a.link(href='#')
		
				#jobTemplate
					li.job
